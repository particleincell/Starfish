<!-- simulation inputs for https://ieeexplore.ieee.org/document/8287799/ -->
<simulation>    
<note>Neutralization with central cathode</note>
<log level="Log" />

<!-- load input files -->
<load>domain.xml</load>
<load>materials.xml</load>
<load>boundaries.xml</load>
<load>interactions.xml</load>
<load>sources.xml</load>


<output type="boundaries" file_name="boundaries.vtp" format="vtk">
<variables>deprate.o+, flux-normal.o+</variables>
</output>

<!-- set time parameters -->
<time>
<num_it>60000</num_it>
<dt>1e-11</dt>
<steady_state>20000</steady_state>
</time>	


<restart>
<it_save>1000</it_save>
<save>true</save>
<load>false</load>
<nt_add>2000</nt_add>
</restart>


<solver type="poisson">
<linear>true</linear>
<max_it>2000</max_it>
<tol>1e-3</tol>
<method>gs</method>
</solver>

<!-- setup averaging -->
<averaging frequency="25" start_it="10000">
<variables>phi,rho,nd.O+,nd.e-,u.o+,v.o+,u.e-,v.e-,t.o+,t.e-</variables>
</averaging>

<animation start_it="1" frequency="250">
<output type="2D" file_name="results/field_ani.vts" format="vtk">
<scalars>phi, rho, nd.o+, nd.e-,t.o+,t.e-</scalars>
<vectors>[efi, efj], [u.o+,v.o+], [u.e-,v.e-]</vectors>
</output>
</animation>

<!-- run simulation -->
<starfish randomize="false" max_processors="4"/>
        
<!-- save results -->

<output type="2D" file_name="results/field.vts" format="vtk">
<variables>nodevol, phi-ave, rho-ave, nd-ave.o+, nd-ave.e-, t.o+, t.e-</variables>
<vectors>[efi,efj], [u-ave.o+,v-ave.o+], [u-ave.e-,v-ave.e-]</vectors>
</output>

<!--
